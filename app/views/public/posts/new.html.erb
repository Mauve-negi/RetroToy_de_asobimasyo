<h1>新規投稿</h1>
<!-- form_with部分 -->
<%= form_with model: @post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
	
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  
  <%= f.label :post_type, "投稿タイプ" %>
  <%= f.select :post_type, Post.post_types.keys.map {|k| [I18n.t("enums.post.post_type.#{k}"), k]} %>
	
  <%= f.submit '投稿' %>
<% end %>