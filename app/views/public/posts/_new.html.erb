<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-10">
      <h2>新規投稿</h2>
      <%= form_with model: post_val do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col">
              <h4>タイトル</h4>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="col">
              <h4>投稿タイプ</h4>
              <%= f.select :post_type, Post.post_types.keys.map {|k| [I18n.t("enums.post.post_type.#{k}"), k]}, { prompt: "選択してください" }, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <h4>本文</h4>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="form-group">
          <h4>画像</h4>
          <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
        </div>

        <%= f.submit '投稿', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
