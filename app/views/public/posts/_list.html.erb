<div class="container my-4">
  <!--<h1 class="text-center">ユーザ Posts Index</h1>-->
  <table class="table table-hover table-bordered mx-auto" style="width: 80%;">
    <thead class="thead-dark">
      <tr>
        <th>記事タイプ</th>
        <th>投稿者</th>
        <th>タイトル</th>
      </tr>
    </thead>

    <tbody>
      <% posts.each do |po| %>
        <tr>
          <td><%= po.post_type == 'nikki' ? '日記' : 'このゆびとまれ' %></td>
          <td>
            <%= link_to(po.user) do %>
              <%= image_tag po.user.get_profile_image(100,100)%> <%= po.user.nickname %>
            <% end %>
          </td>
          <td><%= link_to(po.title, post_path(po)) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>