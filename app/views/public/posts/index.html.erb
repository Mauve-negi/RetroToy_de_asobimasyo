<h1>ユーザ Posts Index</h1>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post_val| %>
      <tr>
        <td><%= post_val.title %></td>
        <td><%= post_val.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>