<div class="container my-4">
  <h1 class="text-center">ユーザ Posts Index</h1>

  <table class="table table-hover table-bordered mx-auto" style="width: 80%;">
    <thead class="thead-dark">
      <tr>
        <th>記事タイプ</th>
        <th>Title</th>
        <th>投稿者</th> <!-- だめ -->
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post_val| %>
        <tr>
          <td><%= post_val.post_type == 'nikki' ? '日記' : 'このゆびとまれ' %></td>
          <td><%= post_val.title %></td>
          <td><%= @user.nickname %></td> <!-- だめ -->
          <td>
            <%= link_to "Show", post_path(post_val), class: "btn btn-primary" %>
            <% if post_val.user == current_user %>
              <%= link_to 'Destroy', post_val, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
