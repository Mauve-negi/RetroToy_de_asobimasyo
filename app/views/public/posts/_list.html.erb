<% if posts.present? %>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% posts.each do |po| %>
        <tr>
          <td><%= link_to(po.user) %></td>
          <td><%= link_to po.title,posts %></td>
          <td><%= po.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No posts found.</p>
<% end %>