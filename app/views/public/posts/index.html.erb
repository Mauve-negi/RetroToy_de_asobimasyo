<div class="container my-4">
  <h1 class="text-center">ユーザ Posts Index</h1>

  <table class="table table-hover table-bordered mx-auto" style="width: 80%;">
    <thead class="thead-dark">
      <tr>
        <th>記事タイプ</th>
        <th>Title</th>
        <th>投稿者</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post_val| %>
        <tr>
          <td><%= post_val.post_type == 'nikki' ? '日記' : 'このゆびとまれ' %></td>
          <td>
            <%= link_to post_path(post_val) do %>
              <%= post_val.title %>
            <% end %>
          </td>
          <td>
            <%= link_to(post_val.user) do %>
              <%= image_tag post_val.user.get_profile_image(100,100)%><br>
              <%= post_val.user.nickname %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>